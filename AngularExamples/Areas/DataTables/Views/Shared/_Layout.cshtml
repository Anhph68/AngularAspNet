<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css", "~/Content/fontawesome", "~/Content/datatable")
    @Scripts.Render("~/bundles/modernizr", "~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/angularjs", "~/bundles/datatable")
    @RenderSection("scripts", false)
</head>
<body>
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>